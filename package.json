{
  "name": "didyouget-backend",
  "version": "0.0.1",
  "description": "Backend service for the 'didyouget' shopping list app",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles ./src/graphql/typeDefs/**/*.gql dist",
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon ./src/index.ts --ext ts,gql",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "npm run test -- --collectCoverage"
  },
  "keywords": [
    "shopping",
    "list",
    "nodejs"
  ],
  "author": "Felix Wohlfrom",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/jest": "29.5.1",
    "@types/jsonwebtoken": "9.0.2",
    "@types/node": "18.16.3",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.59.2",
    "copyfiles": "^2.4.1",
    "eslint": "8.39.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "nodemon": "2.0.22",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@apollo/server": "^4.0.0",
    "@graphql-tools/graphql-file-loader": "^7.5.5",
    "@graphql-tools/load": "^7.7.7",
    "@graphql-tools/schema": "^9.0.4",
    "apollo-server-fastify": "^3.10.3",
    "argon2": "^0.30.1",
    "dotenv": "^16.0.3",
    "graphql-middleware": "^6.1.33",
    "graphql-scalars": "^1.20.0",
    "graphql-shield": "^7.6.3",
    "jsonwebtoken": "^9.0.0",
    "mariadb": "^3.0.1",
    "sequelize": "^6.25.2",
    "sqlite3": "^5.1.5"
  }
}
