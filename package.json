{
  "name": "didyouget-backend",
  "version": "0.0.1",
  "description": "Backend service for the 'didyouget' shopping list app",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles ./src/graphql/typeDefs/**/*.gql dist",
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon ./src/index.ts --ext ts,gql",
    "lint": "eslint . --config eslint.config.mjs",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "npm run test -- --collectCoverage"
  },
  "keywords": [
    "shopping",
    "list",
    "nodejs"
  ],
  "author": "Felix Wohlfrom",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.9",
    "@types/node": "22.14.0",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.29.1",
    "@typescript-eslint/parser": "8.29.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-prettier": "5.2.6",
    "jest": "29.7.0",
    "nodemon": "3.1.9",
    "supertest": "7.1.0",
    "ts-jest": "29.3.1",
    "ts-node": "10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@apollo/server": "^4.12.0",
    "@as-integrations/fastify": "^2.1.1",
    "@graphql-tools/graphql-file-loader": "^8.0.19",
    "@graphql-tools/load": "^8.0.19",
    "@graphql-tools/schema": "^10.0.23",
    "argon2": "^0.41.0",
    "dotenv": "^16.4.7",
    "fastify": "^4.27.0",
    "graphql-middleware": "^6.1.35",
    "graphql-scalars": "^1.24.2",
    "graphql-shield": "^7.6.5",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  }
}
