{
  "name": "didyouget-backend",
  "version": "0.0.1",
  "description": "Backend service for the 'didyouget' shopping list app",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles ./src/graphql/typeDefs/**/*.gql dist",
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon ./src/index.ts --ext ts,gql",
    "lint": "eslint . --config eslint.config.mjs",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "npm run test -- --collectCoverage",
    "test:junit": "npm run test -- --reporters=jest-junit"
  },
  "keywords": [
    "shopping",
    "list",
    "nodejs"
  ],
  "author": "Felix Wohlfrom",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "24.10.9",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.53.0",
    "@typescript-eslint/parser": "8.53.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "jest": "30.2.0",
    "jest-junit": "^16.0.0",
    "nodemon": "3.1.11",
    "supertest": "7.2.2",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@apollo/server": "^5.3.0",
    "@as-integrations/fastify": "^3.1.0",
    "@graphql-tools/graphql-file-loader": "^8.1.9",
    "@graphql-tools/load": "^8.1.8",
    "@graphql-tools/schema": "^10.0.31",
    "argon2": "^0.44.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "graphql-middleware": "^6.1.35",
    "graphql-scalars": "^1.25.0",
    "graphql-shield": "^7.6.5",
    "jsonwebtoken": "^9.0.3",
    "mariadb": "^3.4.5",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28"
  }
}
